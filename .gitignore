# Ignore node_modules in both client and server
client/node_modules/
server/node_modules/

# Ignore build outputs in React client
client/build/
client/.next/
client/.cache/
client/dist/

# Ignore logs and debug files
client/npm-debug.log*
server/npm-debug.log*
client/yarn-debug.log*
server/yarn-debug.log*
client/yarn-error.log*
server/yarn-error.log*

# Ignore environment specific files
client/.env.local
client/.env.development.local
client/.env.test.local
client/.env.production.local

server/.env.local
server/.env.development.local
server/.env.test.local
server/.env.production.local

# Ignore server logs
server/logs/
server/*.log

# Ignore coverage reports
client/coverage/
server/coverage/

# Ignore system files
.DS_Store
Thumbs.db

# Allow .env files to be tracked
!.env
!.env.*
